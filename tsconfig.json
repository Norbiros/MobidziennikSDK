{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "nodenext",

        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": false,

        "declaration": true,
        "outDir": "./lib"
    },
    "include": ["src"]
}
